{
  "name": "GitTrending",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "256": "icon_256.png",
    "128": "icon_128.png",
    "64": "icon_64.png"
  },
  "minimum_chrome_version": "33",
  
  "browser_action": {
    "default_icon": "assets/flame.png",
    "default_popup": "popup.html",
    "default_title": "Top GitHub repositories created recently"
  },

  "permissions": [
    "identity",
    "https://github.com/",
    "https://hacker-news.firebaseio.com/",
    "http://www.reddit.com/"
  ]
}